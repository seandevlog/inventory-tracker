<select id="filter" name="filter">
    <option value="active">Filter by: Active</option>
    <option value="inactive">Filter by: Inactive</option>
    <option value="no-filter" selected>No Filter</option>
</select>
<button id="create" class="btn" href="#">New User</button>
<table>
    <thead>
        <tr>
            <th>Img</th>
            <th><img src="./assets/arrow-down-arrow-up.svg"/>Username</th>
            <th><img src="./assets/arrow-down-arrow-up.svg"/>Given Name</th>
            <th><img src="./assets/arrow-down-arrow-up.svg"/>Family Name</th>
            <th><img src="./assets/arrow-down-arrow-up.svg"/>Contact</th>
            <th><img src="./assets/arrow-down-arrow-up.svg"/>Address</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(user => { %>
            <tr class="row row:hover">
                <td></td>
                <td><%= user.username %></td>
                <td><%= user.givenName %></td>
                <td><%= user.familyName %></td>
                <td><%= user.contact %></td>
                <td><%= user.address %></td>
            </tr>            
        <% }) %>
    </tbody>
    <tfoot></tfoot>
</table>
<%- include('./partials/manage/modal', {
    form: `
        <header></header>
        
        <form action='/users/store' method='POST' id="data">
            <fieldset id="photo">
                <legend>Photo</legend>
                <img src="./assets/image-solid-full.svg"></img> <!-- temp image -->
                <input type="file" name="photo">
            </fieldset>
            <div>
                <fieldset id="info">
                    <legend>Info</legend>
                    <div>
                        <label for="username">Username</label>
                        <span></span>   <!-- Username Validation Output -->
                        <input type="text" id="username" name="username" autocomplete="username">
                    </div>
                    <div>
                        <label for="password">Password</label>
                        <span></span>   <!-- Password Validation Output -->
                        <input type="password" id="password" name="password" autocomplete="current-password">
                    </div>
                    <div>
                        <label for="given-name">Given Name</label>
                        <span></span>   <!-- Given Name Validation Output -->
                        <input type="text" id="given-name" name="givenName" autocomplete="given-name">
                    </div>
                    <div>
                        <label for="family-name">Family Name</label>
                        <span></span>   <!-- Family Name Validation Output -->   
                        <input type="text" id="family-name" name="familyName" autocomplete="family-name">
                    </div>
                    <div>
                        <label for="contact">Contact</label>
                        <span></span>   <!-- Contact Validation Output -->
                        <input type="text" id="contact" name="contact" autocomplete="mobile">
                    </div>
                    <div>
                        <label for="address">Address</label>
                        <span></span>   <!-- Address Validation Output -->
                        <input type="text" id="address" name="address" autocomplete="address-line1">
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Status</legend>
                    <label for="status">Current Status</label>
                    <select id="status" name="status" required>
                        <option value="active">Active</option>
                        <option value="inactive">Inactive</option>
                    </select>
                </fieldset>
            </div>
            <div>
                <button type="submit" id="save" class="btn">Save</button>
                <button id="delete" class="btn">Delete</button>
            </div>
        </form>
    `
}) %>